{
  "ReRoutes": [
    //User Service
    //Authentication
    {
      "DownstreamPathTemplate": "/api/{version}/user/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostandPorts": [
        {
          "Host": "localhost",
          "Port": "2001"
        }
      ],
      "UpstreamPathTemplate": "/api/{version}/u/{everything}",
      "UpstreamHttpMethod": [ "Post" ]
    },
    //Product Service
    //Default Product Address
    {
      "DownstreamPathTemplate": "/api/{version}/product/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostandPorts": [
        {
          "Host": "localhost",
          "Port": "2002"
        }
      ],
      "UpstreamPathTemplate": "/api/{version}/p/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    //WebScraping
    //Gold
    {
      "DownstreamPathTemplate": "/api/{version}/goldexchanges/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostandPorts": [
        {
          "Host": "localhost",
          "Port": "2003"
        }
      ],
      "UpstreamPathTemplate": "/api/{version}/g/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  }
}